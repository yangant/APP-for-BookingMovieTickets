<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LayoutForSort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/SpinnerForSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/SortingArray">
        </Spinner>

        <Spinner
            android:id="@+id/SpinnerForStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/StylesArray">
        </Spinner>

    </LinearLayout>


    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/MovieHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Movie1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MovieImage1"
                    android:src="@mipmap/pirate"
                    android:layout_width="80dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp"
                    android:onClick="ToInfo"/>

                <LinearLayout
                    android:id="@+id/Info1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MovieName1"
                        android:text="加勒比海盗5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"/>

                    <RatingBar
                        android:id="@+id/Rate1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Movie2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/MovieImage2"
                android:src="@mipmap/lilei"
                android:layout_width="80dp"
                android:adjustViewBounds="true"
                android:layout_height="100dp" />

            <LinearLayout
                android:id="@+id/Info2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MovieName2"
                    android:text="李雷和韩梅梅"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/Rate2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/Movie3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MovieImage3"
                    android:src="@mipmap/nvxia"
                    android:layout_width="80dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:id="@+id/Info3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MovieName3"
                        android:text="神奇女侠"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"/>

                    <RatingBar
                        android:id="@+id/Rate3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Movie4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MovieImage4"
                    android:src="@mipmap/luguo"
                    android:layout_width="80dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:id="@+id/Info4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MovieName4"
                        android:text="从你的全世界路过"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"/>

                    <RatingBar
                        android:id="@+id/Rate4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Movie5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MovieImage5"
                    android:src="@mipmap/diexian"
                    android:layout_width="80dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:id="@+id/Info5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MovieName5"
                        android:text="碟仙之毕业照"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"/>

                    <RatingBar
                        android:id="@+id/Rate5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Movie6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MovieImage6"
                    android:src="@mipmap/chichi"
                    android:layout_width="80dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:id="@+id/Info6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MovieName6"
                        android:text="吃吃的爱"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"/>

                    <RatingBar
                        android:id="@+id/Rate6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>